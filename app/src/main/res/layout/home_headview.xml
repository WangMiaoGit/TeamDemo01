<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/linearLayout_icons"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/dot"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/dot_1"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/dot_1"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/dot_1"
                />
        </LinearLayout>


    </RelativeLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_m_nvzhuang"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="女装"
                android:textSize="9dp" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_m_jujia"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="居家"
                android:textSize="9dp" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_m_xiebao"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="鞋包"
                android:textSize="9dp" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_m_shuma"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="数码家电"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_m_nvzhuang"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="9.9包邮"
                android:textSize="9dp" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_m_fengding"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="20元封顶"
                android:textSize="9dp" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_m_today"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="今日更新"
                android:textSize="9dp" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_m_all"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="更多"
                android:textSize="9dp" />
        </LinearLayout>
    </RadioGroup>
<ImageView
    android:background="#F8F8F8"
    android:layout_width="match_parent"
    android:layout_height="2dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imageView_super"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

        <ImageView
            android:scaleType="fitXY"
            android:layout_toRightOf="@id/imageView_super"
            android:id="@+id/imageView_food"
            android:layout_width="match_parent"
            android:layout_height="75dp" />

        <ImageView
            android:scaleType="fitXY"
            android:layout_below="@id/imageView_food"
            android:layout_toRightOf="@id/imageView_super"
            android:id="@+id/imageView_round"
            android:layout_width="match_parent"
            android:layout_height="75dp" />
    </RelativeLayout>
    <ImageView
        android:background="#F8F8F8"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
</LinearLayout>