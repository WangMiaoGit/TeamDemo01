<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_marginRight="2dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageView_home"
        android:layout_width="100dp"
        android:layout_height="80dp" />

    <RelativeLayout
        android:layout_alignBottom="@id/imageView_home"
        android:layout_toRightOf="@id/imageView_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="3dp"
            android:textColor="#3a3a3a"
            android:id="@+id/textView_title"
            android:textSize="10dp"
            android:text="长袖t恤 春秋女2016秋装新款修身打底衫韩版圆领女装蕾丝上衣潮"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/imageView_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="3dp"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginRight="14dp"
            android:id="@+id/textView_newPrice"
            android:layout_toRightOf="@id/imageView_home"
            android:layout_below="@id/textView_title"
            android:textSize="10dp"
            android:text="¥11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/textView_title"
            android:layout_toRightOf="@id/textView_newPrice"
            android:id="@+id/textView_oldPrice"
            android:textSize="8dp"
            android:text="原价¥110.00"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:layout_below="@id/textView_oldPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="35dp"
            android:id="@+id/textView_discount"
            android:layout_below="@id/textView_newPrice"
            android:layout_toRightOf="@id/imageView_home"
            android:layout_marginTop="16dp"
            android:textSize="8dp"
            android:text="2.2折"
            android:layout_marginLeft="3dp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginRight="45dp"
            android:layout_toRightOf="@id/textView_discount"
            android:layout_marginTop="16dp"
            android:layout_below="@id/textView_newPrice"
            android:id="@+id/textView_saleTotal"
            android:textSize="8dp"
            android:text="已售211件"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:id="@+id/textView_isBaoyou"
            android:layout_marginTop="16dp"
            android:layout_below="@id/textView_newPrice"
            android:textSize="8dp"
            android:text="包邮"
            android:textColor="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>